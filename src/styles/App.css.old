/* src/styles/App.css */
@import "tailwindcss";
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Styles pour PWA iOS */
@media (display-mode: standalone) {
  body {
    background-color: white;
  }
}

/* Améliorations pour mobile */
@media (max-width: 768px) {
  .sidebar {
    width: 100%;
    height: auto;
    min-height: auto;
  }
  
  main {
    padding: 1rem;
  }
}

/* Personnalisation des inputs */
input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  opacity: 1;
}

/* Styles pour tables responsives */
table {
  min-width: 100%;
}

@media (max-width: 640px) {
  table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }
}
/* App */
/* src/App.css */
.app {
  display: flex;
  min-height: 100vh;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
}

.main-content {
  flex: 1;
  padding: 0;
  margin-left: 250px; /* Largeur de la sidebar */
  width: calc(100% - 250px);
  min-height: 100vh;
  background-color: #f3f4f6;
}

/* Loading States */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  padding: 20px;
}

.loading-spinner {
  width: 60px;
  height: 60px;
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: white;
  animation: spin 1s ease-in-out infinite;
  margin-bottom: 20px;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 1.25rem;
  font-weight: 500;
  margin: 0;
  opacity: 0.9;
}

/* Error States */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100%;
  padding: 40px;
  text-align: center;
  background-color: white;
}

.error-icon {
  font-size: 4rem;
  margin-bottom: 20px;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20px);
  }
  60% {
    transform: translateY(-10px);
  }
}

.error-title {
  font-size: 1.875rem;
  font-weight: bold;
  color: #dc2626;
  margin-bottom: 12px;
}

.error-message {
  font-size: 1.125rem;
  color: #6b7280;
  margin-bottom: 30px;
  max-width: 500px;
  line-height: 1.6;
}

/* No Content State */
.no-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  text-align: center;
  background-color: white;
  padding: 40px;
}

.no-content h2 {
  font-size: 2rem;
  color: #374151;
  margin-bottom: 16px;
}

.no-content p {
  font-size: 1.125rem;
  color: #6b7280;
  max-width: 400px;
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  border: none;
  transition: all 0.3s ease;
  text-decoration: none;
  gap: 8px;
}

.btn-retry {
  background-color: #2563eb;
  color: white;
  min-width: 140px;
}

.btn-retry:hover {
  background-color: #1d4ed8;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.btn-retry:active {
  transform: translateY(0);
}

.btn-install {
  background-color: #10b981;
  color: white;
  padding: 10px 20px;
  font-size: 0.875rem;
}

.btn-dismiss {
  background-color: #6b7280;
  color: white;
  padding: 10px 20px;
  font-size: 0.875rem;
}

/* PWA Installation Notification */
.pwa-notification {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  padding: 20px;
  max-width: 400px;
  z-index: 1000;
  transform: translateY(100px);
  opacity: 0;
  animation: slideUp 0.5s ease forwards;
  border: 1px solid #e5e7eb;
  display: none; /* Caché par défaut */
}

.pwa-notification.show {
  display: block;
}

@keyframes slideUp {
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.pwa-notification-content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.pwa-notification-content p {
  margin: 0;
  color: #374151;
  line-height: 1.5;
}

.pwa-notification-buttons {
  display: flex;
  gap: 10px;
  justify-content: flex-end;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .main-content {
    margin-left: 0;
    width: 100%;
  }
  
  .pwa-notification {
    left: 20px;
    right: 20px;
    max-width: none;
  }
}

@media (max-width: 768px) {
  .app {
    flex-direction: column;
  }
  
  .loading-container,
  .error-container,
  .no-content {
    padding: 20px;
  }
  
  .error-icon {
    font-size: 3rem;
  }
  
  .error-title {
    font-size: 1.5rem;
  }
  
  .error-message {
    font-size: 1rem;
  }
  
  .pwa-notification {
    bottom: 10px;
    left: 10px;
    right: 10px;
    padding: 15px;
  }
  
  .pwa-notification-buttons {
    flex-direction: column;
  }
  
  .btn-install,
  .btn-dismiss {
    width: 100%;
  }
}

@media (max-width: 480px) {
  .loading-spinner {
    width: 50px;
    height: 50px;
  }
  
  .loading-text {
    font-size: 1rem;
  }
  
  .error-title {
    font-size: 1.25rem;
  }
  
  .btn {
    padding: 10px 20px;
    font-size: 0.875rem;
  }
}

/* Dark mode support (optionnel) */
@media (prefers-color-scheme: dark) {
  .app {
    background-color: #111827;
  }
  
  .main-content {
    background-color: #1f2937;
  }
  
  .loading-container {
    background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  }
  
  .error-container,
  .no-content {
    background-color: #1f2937;
    color: #f9fafb;
  }
  
  .error-title {
    color: #f87171;
  }
  
  .error-message {
    color: #d1d5db;
  }
  
  .no-content h2 {
    color: #f9fafb;
  }
  
  .no-content p {
    color: #d1d5db;
  }
  
  .pwa-notification {
    background-color: #374151;
    border-color: #4b5563;
  }
  
  .pwa-notification-content p {
    color: #f9fafb;
  }
  
  .btn-dismiss {
    background-color: #4b5563;
  }
}

/* Animation d'entrée pour le contenu */
.main-content > * {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Améliorations d'accessibilité */
.btn:focus-visible {
  outline: 3px solid #3b82f6;
  outline-offset: 2px;
}

.btn:focus:not(:focus-visible) {
  outline: none;
}

/* Scrollbar personnalisée */
.main-content::-webkit-scrollbar {
  width: 10px;
}

.main-content::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 5px;
}

.main-content::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 5px;
}

.main-content::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}

@media (prefers-color-scheme: dark) {
  .main-content::-webkit-scrollbar-track {
    background: #374151;
  }
  
  .main-content::-webkit-scrollbar-thumb {
    background: #4b5563;
  }
  
  .main-content::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
}

/* Transition entre les onglets */
.tab-transition-enter {
  opacity: 0;
  transform: translateX(20px);
}

.tab-transition-enter-active {
  opacity: 1;
  transform: translateX(0);
  transition: opacity 300ms, transform 300ms;
}

.tab-transition-exit {
  opacity: 1;
  transform: translateX(0);
}

.tab-transition-exit-active {
  opacity: 0;
  transform: translateX(-20px);
  transition: opacity 300ms, transform 300ms;
}



/* Sidebar */

.sidebar {
  width: 250px;
  background-color: #1f2937;
  color: white;
  min-height: 100vh;
  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  overflow-y: auto;
}

.sidebar-content {
  padding: 24px;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.sidebar-title {
  font-size: 1.5rem;
  font-weight: bold;
  margin-bottom: 32px;
  color: white;
  text-align: left;
}

.sidebar-nav {
  flex: 1;
}

.sidebar-menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-menu-item {
  margin-bottom: 8px;
}

.sidebar-button {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  border-radius: 8px;
  background: none;
  border: none;
  color: #d1d5db;
  font-size: 1rem;
  text-align: left;
  cursor: pointer;
  transition: all 0.2s ease;
}

.sidebar-button:hover {
  background-color: #374151;
  color: white;
}

.sidebar-button.active {
  background-color: #2563eb;
  color: white;
}

.sidebar-icon {
  font-size: 1.25rem;
  line-height: 1;
}

.sidebar-label {
  font-weight: 500;
}

.sidebar-footer {
  padding-top: 32px;
  margin-top: auto;
  border-top: 1px solid #374151;
}

.sidebar-info {
  font-size: 0.875rem;
  color: #9ca3af;
}

.sidebar-app-name {
  margin: 0 0 4px 0;
}

.sidebar-version {
  margin: 0;
}

/* Responsive design */
@media (max-width: 768px) {
  .sidebar {
    width: 100%;
    height: auto;
    min-height: auto;
    position: relative;
    z-index: 1000;
  }
  
  .sidebar-content {
    padding: 16px;
  }
  
  .sidebar-title {
    margin-bottom: 16px;
  }
  
  .sidebar-menu {
    display: flex;
    gap: 8px;
    overflow-x: auto;
  }
  
  .sidebar-menu-item {
    flex-shrink: 0;
    margin-bottom: 0;
  }
  
  .sidebar-button {
    padding: 8px 12px;
    flex-direction: column;
    gap: 4px;
    min-width: 80px;
  }
  
  .sidebar-label {
    font-size: 0.875rem;
  }
}

/* Scrollbar styling */
.sidebar::-webkit-scrollbar {
  width: 6px;
}

.sidebar::-webkit-scrollbar-track {
  background: #374151;
}

.sidebar::-webkit-scrollbar-thumb {
  background: #4b5563;
  border-radius: 3px;
}

.sidebar::-webkit-scrollbar-thumb:hover {
  background: #6b7280;
}
.side-active-btn {
